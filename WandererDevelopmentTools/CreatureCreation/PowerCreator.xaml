<Window x:Class="WandererDevelopmentTools.CreatureCreation.PowerCreator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PowerCreature" Height="300" Width="300">
    <Grid>
        <Grid Margin="5">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="4">
                <Button x:Name="NewPowerButton" Content="New Power" Click="NewPowerButton_Click" Height="AUTO"/>
                <TextBox x:Name="PowerNameTextBox" Width="1000" Margin="12,0"/>
            </StackPanel>
            <StackPanel x:Name="CommandsList" Grid.Row="1" Orientation="Vertical" Margin="5">
                <Button x:Name="NewCommand" Width="20" HorizontalAlignment="Left" Margin="5" FontWeight="ExtraBold" Click="NewCommand_Click">+</Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
